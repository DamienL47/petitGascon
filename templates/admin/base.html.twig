<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bar Restaurant Le Moulin du Petit Gascon{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<header>
    {% block header %}
    <nav class="navBarLog">
        {% if app.session.started  %}
            <a href="{{ path('admin_dashboard') }}">Tableau de bord</a>
            <a href="{{ path('app_logout') }}">Deconnexion</a>
        {% else %}
            <a href="{{ path('home') }}">Accueil</a>
            <a href="{{ path('app_login') }}">Connexion</a>
        {% endif %}
    </nav>
    {% endblock %}
</header>
<body>
<main>
    {% block main %}
    {% endblock %}
</main>
</body>
<footer>
    {% block footer %} {% endblock %}
</footer>
</html>
